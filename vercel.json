{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "env": {
    "POSTGRES_PRISMA_URL": "DATABASE_URL",
    "POSTGRES_URL_NON_POOLING": "DATABASE_URL"
  },
  "routes": [
    {
      "src": "/telegram-webhook/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/assets/$1"
    },
    {
      "src": "/img/(.*)",
      "dest": "/dist/img/$1"
    },
    {
      "src": "/sounds/(.*)",
      "dest": "/dist/sounds/$1"
    },
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|gif|mp3))",
      "dest": "/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/index.html"
    }
  ]
}
