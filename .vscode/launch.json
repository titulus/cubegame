{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api.index:app",
                "--reload",
                "--port",
                "8000"
            ],
            "jinja": true,
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "IS_PRODUCTION": "false"
            },
            "preLaunchTask": "npm: build"
        },
        {
            "name": "Dev Bot",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/api/dev_bot.py",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "IS_PRODUCTION": "false",
                "PYTHONPATH": "${workspaceFolder}"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "FastAPI Server with Vite Proxy",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api.index:app",
                "--reload",
                "--port",
                "8000"
            ],
            "jinja": true,
            "envFile": "${workspaceFolder}/.env",
            "justMyCode": false,
            "env": {
                "VITE_DEV_SERVER": "http://localhost:5173",
                "IS_PRODUCTION": "false"
            }
        },
        {
            "name": "Frontend Dev Server",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Frontend Build",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "build"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal"
        }
    ],
    "compounds": [
        {
            "name": "Full Stack Debug",
            "configurations": ["Frontend Dev Server", "FastAPI Server with Vite Proxy", "Dev Bot"]
        }
    ]
}